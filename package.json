{
  "name": "european-dream-website",
  "version": "1.0.0",
  "description": "European Dream website - Hugo static site",
  "type": "module",
  "scripts": {
    "fonts:copy": "mkdir -p static/fonts && cp node_modules/@fontsource-variable/jost/files/jost-*-wght-normal.woff2 static/fonts/",
    "fonts:build": "bun run scripts/build_fonts.ts",
    "fonts:inline": "bun run scripts/build_inline_assets.ts",
    "scss:build": "sass assets/scss/index.scss:static/css/main.css --load-path=.build/scss --load-path=node_modules --style=compressed --no-source-map",
    "scss:watch": "sass assets/scss/index.scss:static/css/main.css --load-path=.build/scss --load-path=node_modules --watch",
    "js:build": "bun build assets/js/index.ts --outfile=static/js/main.js --minify",
    "dev": "bun run fonts:copy && bun run fonts:build && bun run scss:build && bun run js:build && hugo server --buildDrafts --buildFuture -p 3000",
    "build": "bun run fonts:copy && bun run fonts:inline && bun run scss:build && bun run js:build && HUGO_ENABLE_INLINE_ASSETS=1 hugo --minify",
    "serve:example": "bunx serve -p 8080 example",
    "test:watch": "bun test --watch assets/js/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:unit": "bun test assets/js/"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@fontsource-variable/jost": "5.2.8",
    "@hotwired/turbo": "8.0.23",
    "@playwright/test": "1.57.0",
    "@types/bun": "1.3.6",
    "bootstrap": "5.3.8",
    "dotenv-cli": "11.0.0",
    "sass": "1.97.2",
    "typescript": "5.9.3"
  },
  "license": "EUPL-1.2"
}
