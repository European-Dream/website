{
  "name": "european-dream-website",
  "version": "1.0.0",
  "description": "European Dream website - Hugo static site",
  "type": "module",
  "scripts": {
    "scss:build": "sass assets/scss/index.scss:static/css/main.css --load-path=node_modules --style=compressed --no-source-map",
    "scss:watch": "sass assets/scss/index.scss:static/css/main.css --load-path=node_modules --watch",
    "js:build": "bun build assets/js/index.ts --outfile=static/js/main.js --minify",
    "dev": "bun run scss:build && bun run js:build && hugo server --buildDrafts --buildFuture",
    "build": "bun run scss:build && bun run js:build && hugo --minify",
    "serve:example": "bunx serve -p 8080 example",
    "test": "bun test assets/js/__tests__",
    "test:watch": "bun test --watch assets/js/__tests__",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "bun run test && bun run build && bun run test:e2e"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.11.0",
    "@playwright/test": "1.57.0",
    "@types/bun": "1.3.5",
    "bootstrap": "5.3.8",
    "sass": "1.97.2",
    "typescript": "5.9.3"
  },
  "license": "EUPL-1.2"
}
